@model ProcCore.Business.DB0.AbroadSchool
@{
    ViewBag.Title = Model.school_title;
    ViewBag.BodyClass = "StudyAbroad";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section css {
    <link rel="stylesheet" href="~/Scripts/vendor/flexSlider/flexslider.css">
}
@section Scripts {
    <script src="~/Scripts/vendor/flexSlider/jquery.flexslider-min.js"></script>
    <script>
        $(document).ready(function () {

            $('.gallery').flexslider();

        });
    </script>
}

<ul class="breadcrumb">
    <li><a href="~/Index">首页</a></li>
    <li><a href="~/StudyAbroad">海外留学</a></li>
    @* <li><a href="~/StudyAbroad">分類1</a></li> *@
    <li>@ViewBag.Title</li>
</ul>

<div id="content" class="no-padding">

    <article>

        <header class="title wrap">
            <a href="~/StudyAbroad" class="btn goBack">回列表</a>
            <h2>@ViewBag.Title</h2>
        </header>

        <section class="intro">
            <div class="wrap">
                <header class="title">
                    <h3 class="styled">学校简介<em>Introduction</em></h3>
                </header>
                <div class="article-content editor">
                    @if (Model.imgsrc != null && Model.imgsrc != "" && Model.imgsrc != "../../Content/images/no-pic.jpg")
                    {
                        <p class="float-r"><img data-src="@Model.imgsrc" alt="" class="thumb"></p>
                    }
                    @Html.Raw(Model.content_intro)
                </div>
            </div>
        </section>

        <section class="feature">
            <div class="wrap">
                <header class="title">
                    <h3 class="styled">学校特色<em>Features</em></h3>
                </header>
                <div class="gallery flexslider">
                    <ul class="slides">
                        @foreach (var item in Model.photo_imgsrc)
                        {
                            <li><figure><img data-src="@item" alt=""></figure></li>
                        }
                    </ul>
                </div>
                <div class="article-content editor">
                    @Html.Raw(Model.school_features)
                </div>
            </div>
        </section>

        <div class="info">
            <div class="wrap">
                <section class="info1">
                    <header class="title">
                        <h3 class="styled">学校基本资料<em>Information</em></h3>
                    </header>
                    <div class="table-responsive editor">
                        @Html.Raw(Model.school_info)
                    </div>
                </section>

                <section class="info2">
                    <header class="title">
                        <h3 class="styled">申请相关资讯<em>Apply</em></h3>
                    </header>
                    <div class="table-responsive editor">
                        @Html.Raw(Model.school_apply)
                    </div>
                </section>

            </div>
        </div>

    </article>

</div>